<div class='container'>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>編集画面</h1>


<% if @tourism.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@tourism.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @tourism.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


        <%= form_with model: @tourism, local: true do |f| %>
          <div class="field">
            <%= f.label :title, "観光スポット", class: "label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :address, "住所", class: "label" %>
            <%= f.text_area :address, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :caption, "説明", class: "label" %>
            <%= f.text_area :caption, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "form-control" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
