<div class="container px-5 px-sm-0" style="margin-bottom: 15px;">
  <div class="row">
  <div class="col-md-12"><br>
</div>
</div>
</div>

<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        <h2 class="mt-3"><span style="background-color:#FFEBCD">観光スポット一覧</span></h2>
        <div class="item-index d-flex flex-wrap mt-3">
          <% @tourism.each do |tourisms| %>
            <div class="card m-2 p-3" style="width: 270px;">
              <%= link_to tourism_path(tourisms.id) do %>
              <div class="item-img-box2"><%= attachment_image_tag(tourisms, :image, size:"237x158", fallback: "no_image.png")%></div>
              <% end %>
              <p class="item-index-name font-weight-bold text-dark mt-2 mb-1"><b><%= tourisms.title %></b></p>
              <td>いいね: <%= tourisms.favorites.count %></td>
              <td>コメント: <%= tourisms.tourism_comments.count %></td>
            </div>
          <% end %>
        </div>
        <div class="d-flex justify-content-center mt-4"><%= paginate @tourism %></div>
      </div>
    </div>
  </div>
</div>